<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.workout.WorkoutHistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Workout History"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workout_history_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:scrollbars="none"
            tools:listitem="@layout/list_history"
            tools:itemCount="2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_txt"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_txt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Basketball For 30 Days"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/plan_gym"
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_margin="4dp"
                        android:layout_weight=".5"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/gym" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Gym\n"
                                android:textSize="12sp"
                                android:textAlignment="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/plan_equipment"
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_margin="4dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/equipment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Equipment\n"
                                android:textSize="12sp"
                                android:textAlignment="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/plan_time"
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_margin="4dp"
                        android:layout_weight=".5"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/total_time" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total Time\n 1 hour"
                                android:textSize="12sp"
                                android:textAlignment="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/plan_calories"
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_margin="4dp"
                        android:layout_weight=".5"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="fitXY"
                                app:srcCompat="@drawable/dietition_coach_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Calories \nBurned 300cal"
                                android:textSize="12sp"
                                android:textAlignment="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!--<com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"

                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableTop="@drawable/fitness"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text="Fitness\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:drawableTop="@drawable/fitness"
                            android:gravity="center"
                            android:text="Sports\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:drawableTop="@drawable/clock"
                            android:gravity="center"
                            android:text="Nutrition\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:drawableTop="@drawable/fitness"
                            android:gravity="center"
                            android:text="Dietitian\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>-->


                </LinearLayout>

                <include
                    android:id="@+id/item"
                    layout="@layout/list_workout_history" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.diet.DietPlanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/restaurant_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/restaurant"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/lifegate_grey"
                android:drawableTop="@drawable/ic_nutrition"
                android:gravity="center"
                android:padding="10dp"
                android:text="MEALS"
                android:textColor="#16191A"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="My Nutrition Plan"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="For Today"
                    android:fontFamily="@font/roboto_medium_numbers"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/lifegate_blue"/>

            </LinearLayout>


            <TextView
                android:id="@+id/grocery"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@color/lifegate_grey"
                android:drawableTop="@drawable/ic_ios_basket"
                android:gravity="center"
                android:padding="10dp"
                android:text="GROCERY"
                android:textColor="#16191A"
                android:textSize="10dp" />


        </LinearLayout>

        <!--<TextView
            android:id="@+id/restaurant_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="My Nutrition Plan"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <androidx.core.widget.NestedScrollView
            android:id="@+id/restaurant_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/restaurant_header_txt">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="95dp"
                        android:layout_margin="4dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Today"
                                android:textSize="14sp"
                                android:textColor="#000000"/>

                            <TextView
                                android:id="@+id/day_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Day 01"
                                android:textSize="14sp"
                                android:textColor="@color/lifegate_blue"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center"
                            android:text=":"
                            android:textSize="14sp"
                            android:textColor="#000000"/>

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen15dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total\nCalories"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"/>

                            <TextView
                                android:id="@+id/calories_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                tools:text="1500"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen10dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vitamins"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"/>

                            <TextView
                                android:id="@+id/vitamins_txt"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="10"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:visibility="gone"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="fitXY"
                                android:padding="4dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/round_button"
                                app:srcCompat="@drawable/ic_arrow_down"
                                app:tint="@color/white"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_margin="4dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/dimen10dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Minerals"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"/>

                            <TextView
                                android:id="@+id/mineral_txt"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="10"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:visibility="gone"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="fitXY"
                                android:padding="4dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/round_button"
                                app:srcCompat="@drawable/ic_arrow_down"
                                app:tint="@color/white"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!--<com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"

                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableTop="@drawable/fitness"
                            android:drawablePadding="10dp"
                            android:gravity="center"
                            android:text="Fitness\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:drawableTop="@drawable/fitness"
                            android:gravity="center"
                            android:text="Sports\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:drawableTop="@drawable/clock"
                            android:gravity="center"
                            android:text="Nutrition\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight=".5"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:drawableTop="@drawable/fitness"
                            android:gravity="center"
                            android:text="Dietitian\nCoaches"
                            android:textColor="#7A7A7A"
                            android:textSize="12sp"
                            app:drawableTint="#7A7A7A" />

                    </com.google.android.material.card.MaterialCardView>-->


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/diet_plan_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:listitem="@layout/list_nutrition"
                    tools:itemCount="2"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/log"
            layout="@layout/log_nutrition_overlay_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
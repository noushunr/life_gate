<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lifegate_blue"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/toolbar_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_mail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_settings" />

            <!--<androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/toolbar_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_header_logo"
                app:layout_constraintStart_toEndOf="@id/toolbar_settings"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mail" />-->

            <ru.nikartm.support.ImageBadgeView
                android:id="@+id/toolbar_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ibv_badgeValue="1"
                app:ibv_badgeTextSize="0sp"
                app:ibv_fixedBadgeRadius="6dp"
                app:ibv_badgeTextColor="@color/lifegate_blue"
                app:ibv_badgeColor="@color/white"
                app:ibv_badgeLimitValue="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_header_logo"
                app:layout_constraintStart_toEndOf="@id/toolbar_settings"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_mail" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/toolbar_header_logo"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_notification"
                app:layout_constraintStart_toEndOf="@id/toolbar_mail"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/life_gate_header_logo" />

            <!--<androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/toolbar_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_account"
                app:layout_constraintStart_toEndOf="@id/toolbar_header_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_notifications" />-->

            <ru.nikartm.support.ImageBadgeView
                android:id="@+id/toolbar_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ibv_badgeValue="1"
                app:ibv_badgeTextSize="0sp"
                app:ibv_fixedBadgeRadius="6dp"
                app:ibv_badgeTextColor="@color/lifegate_blue"
                app:ibv_badgeColor="@color/white"
                app:ibv_badgeLimitValue="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/toolbar_account"
                app:layout_constraintStart_toEndOf="@id/toolbar_header_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_notifications" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/toolbar_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/toolbar_notification"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_account" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

</layout>

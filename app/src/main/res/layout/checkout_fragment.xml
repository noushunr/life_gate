<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.checkout.CheckoutFragment">

    <data>
        <variable
            name="viewmodel"
            type="com.lifegate.app.ui.fragments.checkout.CheckoutViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="20dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/checkout_plan_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cropToPadding="true"
                        android:scaleType="fitXY"
                        tools:src="@drawable/basketball" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/checkout_plan_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Basketball For 30 Days"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/checkout_plan_duration_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        tools:text="30 Days"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/checkout_plan_date_layout"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/checkout_plan_start_date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            tools:text="Thursday, July 01"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/arrowforward"
                            app:tint="#000000" />

                        <TextView
                            android:id="@+id/checkout_plan_end_date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:gravity="center"
                            tools:text="Sun, August 01"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/checkout_city_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:textColor="#3D3C3C"
                        android:textSize="12sp"
                        tools:text="Kuwait City"
                        app:drawableStartCompat="@drawable/location_small"
                        app:drawableTint="#3D3C3C" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/curved_top_bg"
            android:padding="16dp"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Plan Fee"
                    android:textSize="15sp"
                    android:textColor="#3E3E3E"/>

                <TextView
                    android:id="@+id/checkout_plan_price_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="KD 30.000"
                    android:textSize="15sp"
                    android:textColor="#35B7FC"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Service Fee"
                    android:textSize="15sp"
                    android:textColor="#3E3E3E"/>

                <TextView
                    android:id="@+id/checkout_service_price_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="KD 4.500"
                    android:textSize="15sp"
                    android:textColor="#35B7FC"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount Code"
                    android:textSize="15sp"
                    android:textColor="#3E3E3E"/>

                <EditText
                    android:id="@+id/checkout_coupon_code_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:text="@={viewmodel.voucherCode}"
                    tools:text="FREE5"
                    android:textSize="15sp"
                    android:textColor="#35B7FC"
                    android:inputType="text"
                    android:background="#4AD9D9D9"
                    android:importantForAutofill="no" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="FREE5"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="#35B7FC"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#808080"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sub Total"
                    android:textSize="17sp"
                    android:textColor="#3E3E3E"/>

                <TextView
                    android:id="@+id/checkout_total_price_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="KD 34.500"
                    android:textSize="17sp"
                    android:textColor="#35B7FC"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/tos_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/accept_all_the_rules_and_regulations"
                android:checked="false"
                android:textColor="#302F2F"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/checkout_pay_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:background="@drawable/curvedbutton"
                android:text="PAY" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/knet" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/master" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/visa" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>